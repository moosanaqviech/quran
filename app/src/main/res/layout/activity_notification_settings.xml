<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification Settings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="24dp" />

        <!-- Notification Toggle Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Verse Notifications"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Receive Quran verses at custom intervals during your selected time period"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <Switch
                        android:id="@+id/notification_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:theme="@style/SwitchTheme" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Notification Interval Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notification Interval"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How often would you like to receive verse notifications?"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="12dp" />

                <Spinner
                    android:id="@+id/interval_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="12dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:padding="12dp" />

                <!-- Preview -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#E3F2FD"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_info"
                        android:layout_marginEnd="8dp"
                        app:tint="#2196F3" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Choose your preferred notification frequency"
                        android:textSize="12sp"
                        android:textColor="#1976D2"
                        android:textStyle="italic" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Time Period Selection Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notification Time Period"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/selected_period_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Every hour from 09:00 to 21:00"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="16dp" />

                <!-- Start Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Start Time:"
                        android:textSize="14sp"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/start_time_display"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09:00"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/start_time_button"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="Change"
                        android:textSize="12sp"
                        android:backgroundTint="#4CAF50"
                        android:textColor="@android:color/white"
                        style="?android:attr/buttonStyleSmall" />

                </LinearLayout>

                <!-- End Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="End Time:"
                        android:textSize="14sp"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/end_time_display"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21:00"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/end_time_button"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="Change"
                        android:textSize="12sp"
                        android:backgroundTint="#4CAF50"
                        android:textColor="@android:color/white"
                        style="?android:attr/buttonStyleSmall" />

                </LinearLayout>

                <!-- Preview -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#F8F9FA"
                    android:padding="12dp"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_notification"
                        android:layout_marginEnd="8dp"
                        app:tint="#2196F3" />

                    <TextView
                        android:id="@+id/notifications_preview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="You will receive 13 notifications per day"
                        android:textSize="12sp"
                        android:textColor="#2196F3"
                        android:textStyle="italic" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Quick Presets Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_star"
                        android:layout_marginEnd="8dp"
                        app:tint="#FF9800" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quick Presets"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Popular notification schedules:"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="12dp" />

                <!-- Preset Buttons Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/preset_light"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:text="Light\n(Every 4h)"
                        android:textSize="11sp"
                        android:backgroundTint="#E8F5E8"
                        android:textColor="#4CAF50"
                        style="?android:attr/buttonStyle" />

                    <Button
                        android:id="@+id/preset_moderate"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:text="Moderate\n(Every 2h)"
                        android:textSize="11sp"
                        android:backgroundTint="#E3F2FD"
                        android:textColor="#2196F3"
                        style="?android:attr/buttonStyle" />

                    <Button
                        android:id="@+id/preset_frequent"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:text="Frequent\n(Every 1h)"
                        android:textSize="11sp"
                        android:backgroundTint="#FFF3E0"
                        android:textColor="#FF9800"
                        style="?android:attr/buttonStyle" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_info"
                        android:layout_marginEnd="8dp"
                        app:tint="#FF9800" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About Custom Notifications"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Notifications will be sent at your chosen interval during the selected time period\n• Each notification contains a different verse from the Quran\n• You can customize both timing and frequency\n• The app works even when closed\n• All notifications are local and don't require internet\n• Very frequent intervals (less than 30 minutes) may drain battery faster"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>