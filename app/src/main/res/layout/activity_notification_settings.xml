<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Enhanced Header with Gradient Background -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_background"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="40dp"
            android:paddingBottom="24dp"
            android:elevation="4dp">

            <!-- Header Navigation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:id="@+id/back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="←"
                        android:textSize="24sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/status_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⚪ Inactive"
                    android:textSize="14sp"
                    android:textColor="#CCFFFFFF"
                    android:background="#33FFFFFF"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:layout_marginEnd="4dp" />

            </LinearLayout>

            <!-- Header Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔔 Notification Settings"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Receive beautiful Quran ayats throughout your day"
                android:textSize="16sp"
                android:textColor="#CCFFFFFF"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Master Switch Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:backgroundTint="#FAFAFA">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="📖"
                                android:textSize="24sp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Verse Notifications"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#2C3E50" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Get inspired with Quranic wisdom delivered to your device at custom intervals"
                            android:textSize="14sp"
                            android:textColor="#7F8C8D"
                            android:lineSpacingExtra="2dp" />

                    </LinearLayout>

                    <Switch
                        android:id="@+id/notification_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:theme="@style/SwitchTheme"
                        android:scaleX="1.2"
                        android:scaleY="1.2" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Welcome Card (shown when notifications are disabled) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/welcome_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="40dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🌟"
                        android:textSize="64sp"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enable Notifications"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#2C3E50"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Turn on the switch above to start receiving beautiful Quran verses throughout your day. Choose from preset schedules or customize your own timing."
                        android:textSize="16sp"
                        android:textColor="#7F8C8D"
                        android:textAlignment="center"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Settings Section (shown when notifications are enabled) -->
            <LinearLayout
                android:id="@+id/enabled_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Quick Presets Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="⚡"
                                android:textSize="24sp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Quick Presets"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#2C3E50" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Choose a preset schedule or customize your own:"
                            android:textSize="14sp"
                            android:textColor="#7F8C8D"
                            android:layout_marginBottom="16dp" />

                        <!-- Preset Buttons -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/preset_light"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:layout_marginBottom="8dp"
                                android:text="🌱 Light • Every 4 hours"
                                android:textSize="16sp"
                                android:textAllCaps="false"
                                android:backgroundTint="#E8F5E8"
                                android:textColor="#2E7D32"
                                android:alpha="0.7" />

                            <Button
                                android:id="@+id/preset_moderate"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:layout_marginBottom="8dp"
                                android:text="⚖️ Moderate • Every 2 hours"
                                android:textSize="16sp"
                                android:textAllCaps="false"
                                android:backgroundTint="#E3F2FD"
                                android:textColor="#1976D2"
                                android:alpha="0.7" />

                            <Button
                                android:id="@+id/preset_frequent"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:text="🔥 Frequent • Every hour"
                                android:textSize="16sp"
                                android:textAllCaps="false"
                                android:backgroundTint="#FFF3E0"
                                android:textColor="#F57C00"
                                android:alpha="0.7" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Custom Schedule Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="⚙️"
                                android:textSize="24sp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Custom Schedule"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#2C3E50" />

                        </LinearLayout>

                        <!-- Interval Selection -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📊 Notification Frequency"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#34495E"
                            android:layout_marginBottom="8dp" />

                        <Spinner
                            android:id="@+id/interval_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginBottom="20dp"
                            android:background="@android:drawable/btn_dropdown"
                            android:padding="16dp"
                            android:backgroundTint="#F8F9FA" />

                        <!-- Time Period Selection -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🕐 Active Time Period"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#34495E"
                            android:layout_marginBottom="16dp" />

                        <!-- Current Schedule Display -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="#F8F9FA"
                            android:padding="16dp"
                            android:layout_marginBottom="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="📅"
                                android:textSize="16sp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:id="@+id/selected_period_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Every hour from 09:00 to 21:00"
                                android:textSize="14sp"
                                android:textColor="#2C3E50"
                                android:textStyle="italic" />

                        </LinearLayout>

                        <!-- Time Selectors -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <!-- Start Time -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginEnd="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="🌅 Start Time"
                                    android:textSize="14sp"
                                    android:textColor="#7F8C8D"
                                    android:layout_marginBottom="8dp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:background="#F1C40F"
                                    android:padding="12dp">

                                    <TextView
                                        android:id="@+id/start_time_display"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="09:00"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:textColor="@android:color/white"
                                        android:gravity="center" />

                                    <Button
                                        android:id="@+id/start_time_button"
                                        android:layout_width="wrap_content"
                                        android:layout_height="32dp"
                                        android:text="Edit"
                                        android:textSize="12sp"
                                        android:textAllCaps="false"
                                        android:backgroundTint="@android:color/white"
                                        android:textColor="#F1C40F"
                                        style="?android:attr/buttonStyleSmall" />

                                </LinearLayout>

                            </LinearLayout>

                            <!-- End Time -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="🌙 End Time"
                                    android:textSize="14sp"
                                    android:textColor="#7F8C8D"
                                    android:layout_marginBottom="8dp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:background="#8E44AD"
                                    android:padding="12dp">

                                    <TextView
                                        android:id="@+id/end_time_display"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="21:00"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:textColor="@android:color/white"
                                        android:gravity="center" />

                                    <Button
                                        android:id="@+id/end_time_button"
                                        android:layout_width="wrap_content"
                                        android:layout_height="32dp"
                                        android:text="Edit"
                                        android:textSize="12sp"
                                        android:textAllCaps="false"
                                        android:backgroundTint="@android:color/white"
                                        android:textColor="#8E44AD"
                                        style="?android:attr/buttonStyleSmall" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Preview -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="#E8F5E8"
                            android:padding="16dp"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="📊"
                                android:textSize="16sp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:id="@+id/notifications_preview"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="📊 You will receive 13 notifications per day&#10;⏰ First notification: 09:00&#10;🌙 Last notification: 21:00&#10;📱 Every hour interval between notifications"
                                android:textSize="13sp"
                                android:textColor="#27AE60"
                                android:lineSpacingExtra="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Benefits Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="#F8F9FA">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="✨"
                                android:textSize="24sp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="How It Works"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#2C3E50" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="🌟 Receive beautiful Quranic verses with translations&#10;📱 Notifications work even when the app is closed&#10;🔄 Each verse is carefully selected to inspire you&#10;⭐ Tap the heart in notifications to save favorites&#10;📤 Share verses directly from notifications&#10;🎯 All content is offline - no internet required&#10;🔋 Optimized to preserve your battery life"
                            android:textSize="14sp"
                            android:textColor="#7F8C8D"
                            android:lineSpacingExtra="6dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>