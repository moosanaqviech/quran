<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Enhanced Switch Theme -->
    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#4CAF50</item>
        <item name="android:colorForeground">#4CAF50</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="colorControlActivated">#4CAF50</item>
    </style>

    <!-- Enhanced Button Styles -->
    <style name="PresetButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PresetButtonLight" parent="PresetButtonStyle">
        <item name="android:backgroundTint">#E8F5E8</item>
        <item name="android:textColor">#2E7D32</item>
    </style>

    <style name="PresetButtonModerate" parent="PresetButtonStyle">
        <item name="android:backgroundTint">#E3F2FD</item>
        <item name="android:textColor">#1976D2</item>
    </style>

    <style name="PresetButtonFrequent" parent="PresetButtonStyle">
        <item name="android:backgroundTint">#FFF3E0</item>
        <item name="android:textColor">#F57C00</item>
    </style>

    <!-- Time Picker Button Style -->
    <style name="TimeButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- Card Styles -->
    <style name="MainCardStyle">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="SubCardStyle">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- Text Styles -->
    <style name="HeaderTextStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="SubHeaderTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#CCFFFFFF</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="SectionTitleStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2C3E50</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="SectionDescriptionStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#7F8C8D</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="LabelTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#7F8C8D</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="TimeDisplayStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PreviewTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#27AE60</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <!-- Custom theme for Quran App without action bar -->
    <style name="QuranAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryVariant">#2E7D32</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">#2196F3</item>
        <item name="colorSecondaryVariant">#1976D2</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Make status bar transparent and extend content behind it -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <!-- Alternative: Just no action bar theme -->
    <style name="QuranAppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryDark">#2E7D32</item>
        <item name="colorAccent">#2196F3</item>
    </style>

    <!-- Notification Settings Theme -->
    <style name="NotificationSettingsTheme" parent="QuranAppTheme">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorControlActivated">#4CAF50</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
    </style>

    <!-- Custom Spinner Style -->
    <style name="CustomSpinnerStyle">
        <item name="android:background">@android:drawable/btn_dropdown</item>
        <item name="android:backgroundTint">#F8F9FA</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#2C3E50</item>
    </style>

    <!-- Status Indicator Styles -->
    <style name="StatusActiveStyle">
        <item name="android:textColor">#4CAF50</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#E8F5E8</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">6dp</item>
    </style>

    <style name="StatusInactiveStyle">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">#F5F5F5</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">6dp</item>
    </style>

    <!-- Gradient Background for Header -->
    <style name="GradientHeaderStyle">
        <item name="android:background">@drawable/gradient_background</item>
        <item name="android:elevation">4dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingTop">40dp</item>
        <item name="android:paddingBottom">24dp</item>
    </style>

    <!-- Welcome Card Style -->
    <style name="WelcomeCardStyle" parent="MainCardStyle">
        <item name="android:backgroundTint">#FAFAFA</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- Benefits Card Style -->
    <style name="BenefitsCardStyle" parent="SubCardStyle">
        <item name="android:backgroundTint">#F8F9FA</item>
        <item name="cardElevation">4dp</item>
    </style>

</resources>